{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./build/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "lib": ["es2017"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
